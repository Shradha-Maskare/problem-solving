class Solution {
    public int reverse(int x) {
       int num=x;
       if(num<0){
           num=-1*num;
       }
       int rev=0;
       while(num>0){
        int ld=num%10;

        if(rev>(Integer.MAX_VALUE-ld)/10){
            return 0;
        }
        rev=rev*10+ld;
        num=num/10;
       }
       if(x<0){
           rev=-rev;
       } 
       return rev;
    }
}

